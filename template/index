            position: relative;
            overflow: hidden;
        }

        /* Mapa */
        #map {
            flex: 1;
            height: 100%;
            transition: margin-right 0.3s ease;
        }

        /* Aba lateral */
        #sidebar {
            width: 300px;
            height: 100%;
            background-color: #f9f9f9;
            box-shadow: -2px 0 5px rgba(0, 0, 0, 0.1);
            position: absolute;
            right: -300px;
            transition: right 0.3s ease;
            z-index: 1000;
        }

        /* Puxador */
        #sidebar-handle {
            position: absolute;
            left: -20px;
            top: 50%;
            transform: translateY(-50%);
            width: 20px;
            height: 60px;
            background-color: #ff4d4d;
            border-radius: 5px 0 0 5px;
            cursor: pointer;
